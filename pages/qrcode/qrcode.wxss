.qrcode {
    background-image: url('http://118.24.92.182/test/vip-background.jpg');
    background-size: 100% 50%;
    background-repeat: repeat-y;
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #19181d
}

.qrcode .text {
    color: #ffffff;
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 50rpx;
    background: linear-gradient(90deg, #c9ab79, #f5dfb3);
    -webkit-background-clip: text;
    color: transparent;
    
}

.qrcode .qrcode-img {
    height: 500rpx;
    width: 500rpx;
    background: #ffffff;
    margin-top: 200rpx;
    border: #c9ab79 10rpx solid;
    border-image: linear-gradient(#c9ab79, #f5dfb3) 30 30;
}