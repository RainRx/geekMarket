@import '../../pages/icon/icon.wxss';

.hover-class{
  opacity: 0.3;
}

.swiper{
  margin-top: 20rpx;
  height: 250rpx;
  width: 100%;
  z-index: 10;
  position: relative;
}

.swiper-image{
  width: 670rpx;
  height: 100%;
  z-index: inherit;
  border-radius: 10rpx;
  margin-left: 40rpx; 
}


.indicator-dots{
  position: absolute;
  bottom: 5rpx;
  height: 20rpx;
  width: 100%;
  display:flex;
  flex-direction: row;
  justify-content: center;
}

.indicator-dots .dot{
  width: 20rpx;
  height: 4rpx;
  margin: 0 5rpx;
  background-color: rgba(0, 0, 0, .3)
}

.indicator-dots .dot.dot-active{
  background-color: #437be8
}

.index .grids{
  width: 670rpx;
  height: 200rpx;
  margin: 40rpx auto;
  display: flex;
  align-items: center;
  box-shadow: 0 6px 18px 0 rgba(200, 200, 200, 0.4);
}

.grids .balance{
  display: flex;
  flex-direction: column;
  width: 295rpx;
  text-align: end;
}

.balance .title{
  font-size: 28rpx;
  font-weight: bold;
}

.balance .number{
  font-size: 65rpx;
  font-weight: bold;
}

.grids .fence{
  height: 80rpx;
  padding: 60rpx 40rpx 60rpx 40rpx;
}


.grids .qrcode{
  display: flex;
  /* text-align: center; */
  flex-direction: column;
  align-items: center;
}

.qrcode .img{ 
  height: 100rpx;
  width: 100rpx;
  margin: 10rpx 0  10rpx 0;
}
